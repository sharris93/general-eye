<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= article.title %> | General Eye</title>
  <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
  <%- include('../partials/nav.ejs') %>
  
  <main class="show-article">
    <div class="top-bar">
      <!-- Back to articles link -->
      <div class="back-to-articles">
        <a href="/articles">Back to all articles</a>
      </div>

      <!-- Controls (Edit/Delete) -->
      <% if (user && article.author.equals(user._id)) { %>
        <div class="controls">
          <a class="edit-btn" href="/articles/<%= article._id %>/edit">‚úçÔ∏è</a>
          <form action="/articles/<%= article._id %>?_method=DELETE" method="POST">
            <button class="delete-btn" type="submit">üóëÔ∏è</button>
          </form>
        </div>
      <% } %>
    </div>

    <!-- Article details -->
    <div class="article">
      <div class="banner-image" style="background-image: url('https://picsum.photos/seed/picsum/1200/200');"></div>
      <h1><%= article.title %></h1>
      <p>Written by <%= article.author.username %></p>
      <ul class="tags">
        <% article.tags.forEach(tag => { %>
          <li><%= tag %></li>
        <% }); %>
      </ul>
      <p><%= article.content %></p>
    </div>

    <!-- Comment section -->
    <div class="comment-section">
      <div class="comments">
        <h2>Comments</h2>
        <% article.comments.reverse().forEach(article => { %>
          <div class="comment">
            <h3><%= article.author.username %></h3>
            <p><%= new Date(article.createdAt).toString() %></p>
            <p><%= article.content %></p>
          </div>
        <% }) %>
      </div>

      <form action="/articles/<%= article._id %>/comments" method="POST">
        <h2>Leave a comment</h2>
        <label hidden for="content">Content</label>
        <textarea name="content" id="content"></textarea>
        <% if (errorMessage) { %>
          <p class="error-message"><%= errorMessage %></p>
        <% } %>
        <button type="submit">Submit</button>
      </form>
    </div>
    
    
  </main>
</body>
</html>